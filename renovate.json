{
  "extends": [
    "config:base"
  ],
  "ignoreUnstable": true,
  "automerge": true,
  "automergeType": "branch",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "packagePatterns": ["^babel"],
      "groupName": "babel"
    },
    {
      "packagePatterns": ["^rollup"],
      "groupName": "rollup"
    },
    {
      "packageNames": ["benchmark"],
      "groupName": "benchmark"
    },
    {
      "packageNames": ["bson"],
      "groupName": "bson"
    },
    {
      "packageNames": ["codecov"],
      "groupName": "codecov"
    },
    {
      "packagePatterns": ["istanbul"],
      "groupName": "istanbul"
    },
    {
      "packageNames": ["lodash"],
      "groupName": "lodash"
    },
    {
      "packageNames": ["nyc"],
      "groupName": "nyc"
    },
    {
      "packageNames": ["perf_hooks"],
      "groupName": "perf_hooks"
    },
    {
      "packageNames": ["tape"],
      "groupName": "tape"
    },
    {
      "packageNames": ["uglify-js"],
      "groupName": "uglify-js"
    }
  ]
}
