{
  "name": "mingo",
  "version": "3.0.0",
  "description": "JavaScript implementation of MongoDB query language",
  "main": "index.js",
  "module": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -fr lib",
    "release": "npm run clean && npm run build && npm test",
    "postrelease": "npm run coverage",
    "test": "npm run build && NODE_ENV=test nyc --reporter=lcov --reporter=text ./run-test test/*.js test/**/*.js",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kofrasa/mingo.git"
  },
  "files": [
    "lib/",
    "index.js",
    "index.d.ts",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "esm": "3.2.25"
  },
  "devDependencies": {
    "benchmark": "2.1.4",
    "codecov": "3.6.5",
    "lodash": "4.17.15",
    "nyc": "15.0.0",
    "perf_hooks": "0.0.1",
    "tape": "4.13.2"
  },
  "keywords": [
    "util",
    "mongo",
    "nosql",
    "query",
    "aggregate",
    "filter",
    "group",
    "project",
    "search",
    "transform"
  ],
  "author": "Francis Asante <kofrasa@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kofrasa/mingo/issues"
  }
}
