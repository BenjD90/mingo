{
  "name": "mingo",
  "version": "3.0.0",
  "description": "JavaScript implementation of MongoDB query language",
  "main": "index.js",
  "module": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -fr lib",
    "release": "npm run clean && npm test",
    "testall": "NODE_ENV=test nyc --reporter=lcov --reporter=text ./runtest.sh",
    "test": "npm run build && npm run testall",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "prepublishOnly": "node -r esm ./prepare.js publish",
    "install": "node -r esm ./prepare.js install && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kofrasa/mingo.git"
  },
  "files": [
    "lib/",
    "index.js",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "esm": "3.2.25"
  },
  "devDependencies": {
    "codecov": "3.6.5",
    "lodash": "4.17.15",
    "nyc": "15.0.1",
    "perf_hooks": "0.0.1",
    "tape": "4.13.2",
    "typescript": "3.8.3"
  },
  "keywords": [
    "util",
    "mongo",
    "nosql",
    "query",
    "aggregate",
    "filter",
    "group",
    "project",
    "search",
    "transform"
  ],
  "author": {
    "name": "Francis Asante",
    "email": "kofrasa@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kofrasa/mingo/issues"
  }
}
